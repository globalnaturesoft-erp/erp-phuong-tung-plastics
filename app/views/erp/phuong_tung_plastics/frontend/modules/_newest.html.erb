<div class="box">
  <div class="box-heading">Sản phẩm mới</div>
  <div class="box-content">
    <div class="box-product">
      <div class="flexslider">
        <ul class="slides">
          <% (0..5).each do |product| %>
          <li>
            <div class="slide-inner">
              <div class="image">
                <%= link_to image_tag("/frontend/image/product/small-product.jpg", alt: "", title: ""), erp_phuong_tung_plastics.product_detail_path, title: "" %>
              </div>
              <div class="name">
                <%= link_to "Bồn nước Long Nhiên...", erp_phuong_tung_plastics.product_detail_path, title: "" %>
              </div>
              <div class="sales_price"><del>100,000đ</del></div>
              <div class="price">100,000đ</div>
              <div class="clear"></div>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>